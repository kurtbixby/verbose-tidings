{{!-- Option to add a new blog post --}}
<div class="flex justify-center items-center flex-col space-y-4">
    <button id="addPostButton" class="w-4/5 bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">New Post</button>    
    <ol class="w-11/12 space-y-4">
        {{#each posts as |post|}}
        <li data-post-id="{{id}}" class="flex items-center">
            <div class="w-9/12 mr-1 ">
                {{> smallBlog}}
            </div>
            <div class="flex justify-center w-3/12 space-x-1">
                <button class="edit-btn flex-auto grow bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-1 rounded" data-post-id="{{id}}">
                    Edit
                </button>
                <button class="delete-btn flex-auto grow bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-1 rounded" data-post-id="{{id}}">
                    Delete
                </button>
            </div>
        </li>
        {{/each}}
    </ol>
</div>
<script src="/assets/scripts/dashboard.js"></script>
